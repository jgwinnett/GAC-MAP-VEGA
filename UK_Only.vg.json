{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "width": 720,
  "height": 720,
  "padding": {"top": 25, "left": 0, "right": 0, "bottom": 0},
  "autosize": "none",
  "signals": [
    {
      "name": "tension",
      "value": 0.85
    },
    {
      "name": "radius",
      "value": 280
    },
    {
      "name": "extent",
      "value": 360
    },
    {
      "name": "rotate",
      "value": 360
    },
    {
      "name": "layout",
      "value": "cluster"
    },
    {
      "name": "originX",
      "update": "width / 2"
    },
    {
      "name": "originY",
      "update": "height / 2"
    },
    {
      "name": "textOffset",
      "value": 2
    },
    {
      "name": "textSize",
      "value": 8
    },
    {
      "name": "projLead",
      "value": "#1DACE8"
    },
    {
      "name": "projPartic",
      "value": "#F24D29"
    },
    {
      "name": "active",
      "value": null,
      "on": [
        {
          "events": "text:mouseover",
          "update": "datum.id"
        },
        {
          "events": "mouseover[!event.item]",
          "update": "null"
        }
      ]
    },
    {
      "name": "hover",
      "value": null,
      "on": [
        {"events": "text:mouseover", "update":"datum"},
        {"events": "text:mouseout", "update": "null"}
      ]
    },
      {
        "name": "title",
        
        "value": "U.K 5G Projects",
        "update": "if(hover, if(hover.Funding, hover.name + ' ( Â£' + hover.Funding + ')', hover.name), 'U.K 5G Projects')"
      }
  ],
  "data": [
    {
      "name": "tree",
      "url": "https://raw.githubusercontent.com/jgwinnett/GAC-MAP-VIZ/master/nodes.json",
      "transform": [
        {
          "type": "nest",
          "key": "id",
          "keys": [
            "instType"
          ],
          "generate": true
        },
        {
          "type": "tree",
          "method": {
            "signal": "layout"
          },
          "size": [
            1,
            1
          ],
          "as": [
            "alpha",
            "beta",
            "depth",
            "children"
          ]
        },
        {
          "type": "formula",
          "expr": "(rotate + extent * datum.alpha + 270) % 360",
          "as": "angle"
        },
        {
          "type": "formula",
          "expr": "inrange(datum.angle, [90, 270])",
          "as": "leftside"
        },
        {
          "type": "formula",
          "expr": "originX + radius * datum.beta * cos(PI * datum.angle / 180)",
          "as": "x"
        },
        {
          "type": "formula",
          "expr": "originY + radius * datum.beta * sin(PI * datum.angle / 180)",
          "as": "y"
        },
        {
          "type": "formula",
          "expr": "if(datum.Funding, (format(datum.Funding,'(,r')), null)",
          "as": "Funding"
        }
      ]
    },
    {
      "name": "leaves",
      "source": "tree",
      "transform": [
        {
          "type": "filter",
          "expr": "!datum.children"
        },
        {
          "type": "filter",
          "expr": "!datum.children"
        }
      ]
    },
    {
      "name": "edges",
      "url": "https://raw.githubusercontent.com/jgwinnett/GAC-MAP-VIZ/master/edges.json",
      "transform": [
        {
          "type": "formula",
          "expr": "treePath('tree', datum.source, datum.target)",
          "as": "treepath",
          "initonly": true
        }
      ]
    },
    {
      "name": "selected",
      "source": "edges",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.source === active || datum.target === active"
        }
      ]
    },
    {
      "name": "selectedSource",
      "source": "selected",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.source === active"
        }
      ]
    },
    {
      "name": "selectedTarget",
      "source": "selected",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.target === active"
        }
      ]
    }
  ],
  "scales": [],
  "projections": [],
  "marks": [
    {
      "type": "text",
      "from": {
        "data": "leaves"
      },
      "encode": {
        "enter": {
          "text": {
            "field": "name"
          }
        },
        "update": {
          "x": {
            "field": "x"
          },
          "y": {
            "field": "y"
          },
          "dx": {
            "signal": "textOffset * (datum.leftside ? -1 : 1)"
          },
          "angle": {
            "signal": "datum.leftside ? datum.angle - 180 : datum.angle"
          },
          "align": {
            "signal": "datum.leftside ? 'right' : 'left'"
          },
          "fontSize": {
            "signal": "textSize"
          },
          "fontWeight": [
            {
              "test": "indata('selected', 'source', datum.id)",
              "value": "bold"
            },
            {
              "test": "indata('selected', 'target', datum.id)",
              "value": "bold"
            },
            {
              "value": null
            }
          ],
          "fill": [
            {
              "test": "datum.id === active",
              "value": "black"
            },
            {
              "test": "indata('selectedTarget', 'source', datum.id)",
              "signal": "projPartic"
            },
            {
              "test": "indata('selectedSource', 'target', datum.id)",
              "signal": "projLead"
            },
            {
              "value": "black"
            }
          ]
        }
      }
    },
    {
      "type": "text",
      "interactive": false,
      "encode": {
        "enter": {
          "x": {"signal": "width", "offset": -5},
          "y": {"value": 0},
          "fill": {"value": "black"},
          "fontSize": {"value": 20},
          "align": {"value": "right"}
        },
        "update": {
          "text": [
            {"signal": "title"}
          ]
        }
      }
    },
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "path",
          "data": "edges",
          "field": "treepath"
        }
      },
      "marks": [
        {
          "type": "line",
          "interactive": false,
          "from": {
            "data": "path"
          },
          "encode": {
            "enter": {
              "interpolate": {
                "value": "bundle"
              },
              "strokeWidth": {
                "value": 1.25
              },
              "strokeOpacity": [
                {
                  "value": 0.2
                }
              ]
            },
            "update": {
              "stroke": [
                {
                  "test": "parent.source === active",
                  "signal": "projLead"
                },
                {
                  "test": "parent.target === active",
                  "signal": "projPartic"
                },
                {
                  "value": "#C4CFD0"
                }
              ],
              "strokeOpacity": [
                {
                  "test": "parent.source === active || parent.target === active",
                  "value": 1
                },
                {
                  "value": 0.3
                }
              ],
              "tension": {
                "signal": "tension"
              },
              "x": {
                "field": "x"
              },
              "y": {
                "field": "y"
              }
            }
          }
        }
      ],
      "scales": [
        {
          "name": "color",
          "type": "ordinal",
          "domain": [
            "is Project Leader",
            "is Project Collaborator"
          ],
          "range": [
            {
              "signal": "projLead"
            },
            {
              "signal": "projPartic"
            }
          ]
        }
      ],
      "legends": [
        {
          "stroke": "color",
          "orient": "right",
          "title": "Project Relationships",
          "encode": {
            "symbols": {
              "enter": {
                "shape": {
                  "value": "M-0.5,0H1"
                }
              }
            },
              "title": {
                "update": {
                  "fontSize": {"value": 14},
                  "fontWeiht": {"value": "normal"}
                }
              }
            
          }
        }
      ]
    }
  ]
}
